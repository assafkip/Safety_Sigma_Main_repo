cat > .gitignore <<'EOF'
# macOS
.DS_Store

# Python
__pycache__/
*.pyc
*.pyo
*.pyd

# Editors
.vscode/
.idea/
*.swp

# Jupyter
.ipynb_checkpoints/
EOF

# stop tracking junk if it slipped in
git rm --cached -r __pycache__ 2>/dev/null || true
git rm --cached .DS_Store 2>/dev/null || true
git add .gitignore
